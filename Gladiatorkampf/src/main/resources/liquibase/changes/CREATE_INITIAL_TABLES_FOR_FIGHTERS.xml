<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
         logicalFilePath="src\main\resources\liquibase\changes\CREATE_INITIAL_TABLES_FOR_FIGHTERS.xml">


	<changeSet id="ADD_ABSTRACTFIGHTER_TABLE" author="pierre">
		<createTable tableName="ABSTRACTFIGHTER">
			<column name="ID"  autoIncrement="true"
				type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="DTYPE" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="BASEATTACK" type="NUMBER(19,2)"></column>
			<column name="BASEDEFENSE" type="NUMBER(19,2)"></column>
			<column name="BASEHEALTHPOINTS" type="NUMBER(19,2)"></column>
			<column name="CURRENTHEALTHPOINTS" type="NUMBER(19,2)"></column>
			<column name="NAME" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="TOTALATTACK" type="NUMBER(19,2)"></column>
			<column name="TOTALDEFENSE" type="NUMBER(19,2)"></column>
			<column name="TOTALHELTHPOINTS" type="NUMBER(19,2)"></column>
		</createTable>
	</changeSet>
	<changeSet id="ADD_EQUIPMENT_TABLE" author="pierre">
		<createTable tableName="EQUIPMENT">
			<column name="ID" autoIncrement="true"
				type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="ATTACK" type="NUMBER(19,2)"></column>
			<column name="BODYPART" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="DEFENSE" type="NUMBER(19,2)"></column>
			<column name="HEALTHPOINTS" type="NUMBER(19,2)"></column>
			<column name="RARITY" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="ADD_FIGHTER_EQUIPMENT_TABLE" author="pierre">
		<createTable tableName="FIGHTER_EQUIPMENT">
			<column name="FIGHTER_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="EQUIPMENT_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="ADD_FIGHTRECORD" author="pierre">
		<createTable tableName="FIGHTRECORD">
			<column name="ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="DMGINFLICTED" type="NUMBER(19,2)">
			</column>
			<column name="DMGTAKEN" type="NUMBER(19,2)">
			</column>
			<column name="RESULT" type="VARCHAR(255)">
			</column>
			<column name="FIGHTERID" type="NUMBER(19,2)">
			</column>
			<column name="ARENARESULTID" type="NUMBER(19,2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="ADD_FIGHTRECORD_ALLIES" author="pierre">
		<createTable tableName="FIGHTRECORD_ALLIES">
			<column name="FIGHTERRECORD_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="ALLIES_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="ADD_FIGHTRECORD_ENEMIES" author="pierre">
		<createTable tableName="FIGHTRECORD_ENEMIES">
			<column name="FIGHTERRECORD_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="ADD_ARENARESULT" author="pierre">
		<createTable tableName="ARENARESULT">
			<column name="ENEMIES_ID" type="NUMBER">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>